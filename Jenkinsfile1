pipeline {
    agent any
    
    stages {

        stage('List out items after checking out code') {
            steps {
                sh "ls -ltr"
            }
        }
        stage('Setup') {
            steps {
                sh "pwd"
                sh "whoami "
                
            }
        }
        stage('Test') {
            steps {
                
                
                sh "sudo apt install pytest -y"
                sh "python -m pytest test_app.py"
                
                sh "whoami"
            }
        }
    }
}