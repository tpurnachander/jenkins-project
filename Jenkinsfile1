pipeline {
    agent any
    
    stages {

        stage('List out items after checking out code') {
            steps {
                sh "ls -ltr"
            }
        }
        stage('Setup') {
            steps {
                sh "pwd"
                sh "whoami"
                sh "sudo apt-get install python3-venv"
                sh "python3 -m venv flask"
                sh "source flask/bin/activate"
                sh "pip3 install -r requirements.txt"
            }
        }
        stage('Test') {
            steps {
                sh "pytest"
                sh "whoami"
            }
        }
    }
}